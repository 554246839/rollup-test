{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, 
    "removeComments": false,
    "declaration": true,
    "declarationMap": false,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ], 
    "types": ["node"]
  },
  "exclude": [ "node_modules", "dist" ],
  "include": [
    "src/*" 
  ]
}